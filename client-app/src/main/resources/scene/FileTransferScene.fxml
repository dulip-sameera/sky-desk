                        <Font size="16.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="btnSelectFile" layoutX="34.0" layoutY="329.0" mnemonicParsing="false" onAction="#btnSelectFileOnAction" prefHeight="26.0" prefWidth="261.0" text="Select File">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="btnUpload" layoutX="34.0" layoutY="594.0" mnemonicParsing="false" onAction="#btnUploadOnAction" prefHeight="26.0" prefWidth="261.0" text="Upload">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="btnRemoveUpload" layoutX="34.0" layoutY="668.0" mnemonicParsing="false" onAction="#btnRemoveUploadOnAction" prefHeight="26.0" prefWidth="261.0" text="Remove">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
